<% include header %>
<p>
    <% if(user && user.username == doc.name ){%>
    <span>
        <a class="edit" href="/edit/<%= doc.name %>/<%= doc.title %>/<%= doc.time %>">编辑</a>
    </span>
    <span>
        <a class="edit" href="/remove/<%= doc.name %>/<%= doc.title %>/<%= doc.time %>">删除</a>
    </span>
    <% } %>
</p>
<p class="info">
    作者:<a href="/u/<%= doc.name %>"><%= doc.name %></a> |
    日期:<%= doc.time %>
    标签：
    <% doc.tags.forEach(function (tag) { %>
    <% if (tag) { %>
    <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
    <% } %>
    <% }) %>
</p>
<p>
    <%- doc.content %>
</p>
<p class="info">阅读：<%= doc.pv %> | 评论：<%= doc.comments.length %></p>
<% include comment %>
<% include footer %>